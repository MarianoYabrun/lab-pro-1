#include <stdio.h>
#include <stdlib.h>

#define TAM 5

void mostrarVectorEntero(int x[], int tam);
void ordenarMayorMenor(int x[], int tam);

int main()
{
   int vec[]= {8,5,9,2,4};


   mostrarVectorEntero(vec, TAM);

   ordenarMayorMenor(vec, TAM);

   mostrarVectorEntero(vec, TAM);

    return 0;
}

void mostrarVectorEntero(int x[], int tam){

for(int i = 0; i< tam; i++){

    printf("%d", x[i]);
}
printf("\n\n");
}


void ordenarMayorMenor(int x[], int tam){

    int aux;

 for(int i=0; i< tam-1; i++){

    for(int j= i+1; j<tam; j++){

       if(x[i] > x[j]) {
        aux = x[j];
        x[j]= x[i];
        x[i]= aux;
       }
    }
 }
}


